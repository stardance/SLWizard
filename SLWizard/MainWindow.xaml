<Window x:Class="SLWizard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SLWizard"
        xmlns:vm="clr-namespace:SLWizard.ViewModels"
        xmlns:res="clr-namespace:SLWizard.Resources"
        mc:Ignorable="d"
        Title="SLWizard" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        Closed="Window_Closed">
    <Window.Resources>
        <res:SerialConverter x:Key="SerCVT" />
        <Style TargetType="Button">
            <Setter Property="Height" Value="24" />
        </Style>
    </Window.Resources>
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <Grid Background="{StaticResource BlackGround}">
        <Grid.RowDefinitions>
            <!--<RowDefinition Height="25"/>-->
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Row="1"
              Grid.Column="0">
            <res:CubeButton Content="新建项目"
                    Command="{Binding AddNewProjectCommand}"
                    Margin="2"
                    Style="{StaticResource CubeButton}"/>
        </Grid>

        <Grid Grid.Row="0"
              Grid.Column="0">
            <ListBox ItemsSource="{Binding Entity.Projects}"
                     Background="{StaticResource BlackGround}"
                     SelectedItem="{Binding SelectedProject}"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <CheckBox IsChecked="{Binding IsSelected}" 
                                      Height="20" Width="20"  
                                      VerticalAlignment="Center" 
                                      Margin="10,5">
                            </CheckBox>
                            <TextBlock Text="{Binding ProjectName}" 
                                       VerticalAlignment="Center" 
                                       Margin="5" 
                                       FontSize="16"
                                       Width="180"
                                       Foreground="White">
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <Grid Grid.Row="0"
              Grid.Column="1">
            <DataGrid ItemsSource="{Binding SelectedProject.Items}"
                      AutoGenerateColumns="False"
                      IsSynchronizedWithCurrentItem="False"
                      CanUserAddRows="False"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Width="20"
                                            Binding="{Binding IsSelected}"/>
                    <DataGridTextColumn Binding="{Binding Serial,Converter={StaticResource SerCVT}}"
                                        Header="序号"
                                        Width="60"
                                        Foreground="White"/>
                    <DataGridTextColumn Binding="{Binding CreateTime,StringFormat={}{0:yyyy-MM-dd HH:mm}}"
                                        Header="创建日期"
                                        Width="120"
                                        Foreground="White"/>
                    <DataGridTextColumn Binding="{Binding Note}"
                                        Header="备注"
                                        Width="200"
                                        Foreground="White"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <StackPanel Grid.Row="1"
                    Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <res:CubeButton Content="设置"
                    Margin="5 "
                    Width="100"
                    Style="{StaticResource CubeButton}"
                    Command="{Binding SettingCommand}"
                    >
                <res:CubeButton.PathData>
                    <PathGeometry Figures="M14,0L18,0 18,14 32,14 32,18 18,18 18,32 14,32 14,18 0,18 0,14 14,14z" />
                </res:CubeButton.PathData>
            </res:CubeButton>
            <res:CubeButton Content="保存"
                    Margin="5 2"
                    Width="100"
                    Style="{StaticResource CubeButton}"
                    Command="{Binding SaveCommand}">
                <res:CubeButton.PathData>
                    <PathGeometry Figures="M11.999988,24.000056L11.999988,30.000041 20.999989,30.000041 20.999989,24.000056z M15.999989,7.0000553L15.999989,11.000056 20.999989,11.000056 20.999989,7.0000553z M6.9999914,7.0000409L6.9999914,30.000041 9.9999881,30.000041 9.9999881,23.000056C9.9999881,22.447055,10.447988,22.000056,10.999988,22.000056L21.999988,22.000056C22.552989,22.000056,22.999988,22.447055,22.999988,23.000056L22.999988,30.000041 25.999991,30.000041 25.999991,11.413981 22.999988,8.4288988 22.999988,12.000056C22.999988,12.552056,22.552989,13.000055,21.999988,13.000055L14.999989,13.000055C14.447989,13.000055,13.999989,12.552056,13.999989,12.000056L13.999989,7.0000409z M5.9999912,5.0000412L21.977988,5.0000412 21.999988,5.0000555C22.311051,5.0000557,22.588574,5.1414893,22.771867,5.3636655L22.818044,5.4254475 27.705009,10.288981C27.894004,10.47697,27.999991,10.731975,27.999991,10.997966L27.999991,31.000041C27.999991,31.55302,27.553,32.000041,26.999991,32.000041L22.000291,32.000041 10.999988,32.000056 5.9999912,32.000041C5.4470129,32.000041,4.9999914,31.55302,4.9999913,31.000041L4.9999913,6.0000411C4.9999914,5.4469404,5.4470129,5.000041,5.9999912,5.0000412z M1,0L16,0 16,1.9999998 2,1.9999998 2,24.999999 0,24.999999 0,1C0,0.44700003,0.44700003,0,1,0z" />
                </res:CubeButton.PathData>
            </res:CubeButton>
            <res:CubeButton Content="载入"
                    Margin="5 2"
                    Width="100"
                    Style="{StaticResource CubeButton}"
                    Command="{Binding LoadCommand}">
                <res:CubeButton.PathData>
                    <PathGeometry Figures="M0,10.67803L10.959008,10.67803 10.959008,12.671012 1.9920034,12.671012 1.9920034,30.007019 29.888989,30.007019 29.888989,12.671012 21.918994,12.671012 21.918994,10.67803 31.882001,10.67803 31.882001,32.000031 0,32.000031z M15.426984,0L17.420003,0 17.420003,19.490229 22.797995,14.280998 24.183995,15.711001 16.421996,23.231018 8.6619976,15.680001 10.050998,14.250998 15.426984,19.482771z" />
                </res:CubeButton.PathData>
            </res:CubeButton>
        </StackPanel>

        <StackPanel Grid.Row="2" 
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Background="#535353">
            <TextBlock Text="{Binding SysMsg}" 
                       Margin="2 2 0 0"
                       Height="20"
                       FontSize="12"
                       Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
