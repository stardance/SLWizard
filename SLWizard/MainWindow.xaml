            </res:CubeButton>
        </StackPanel>

        <StackPanel Grid.Row="2" 
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Background="#535353">
            <TextBlock Text="{Binding SysMsg}" 
                       Margin="2 2 0 0"
                       Height="20"
                       FontSize="12"
                       Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
