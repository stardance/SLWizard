                                                          Stretch="Uniform" 
                                                          Fill="White" 
                                                          Width="16" 
                                                          Height="16" 
                                                          Margin="0,0,0,0" 
                                                          RenderTransformOrigin="0.5,0.5"
                                                          Name="DeleteItemBtn"
                                                          Opacity="0.5">
                                                        <Path.RenderTransform>
                                                            <TransformGroup>
                                                                <TransformGroup.Children>
                                                                    <RotateTransform Angle="0" />
                                                                    <ScaleTransform ScaleX="1" ScaleY="1" />
